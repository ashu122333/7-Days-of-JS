  }
</script>
üèóÔ∏è Project Task
1. Mock MCQ Quiz (with timer)
html
Copy
Edit
<body>
  <h2>Mock Quiz</h2>
  <p id="quizTimer"></p>
  <form id="quizForm">
    <p>1. What is React?</p>
    <input type="radio" name="q1" value="framework"> Framework<br>
    <input type="radio" name="q1" value="library"> Library<br>

    <p>2. JS type of NaN?</p>
    <input type="radio" name="q2" value="string"> String<br>
    <input type="radio" name="q2" value="number"> Number<br>

    <br>
    <button type="button" onclick="submitQuiz()">Submit</button>
  </form>
  <p id="result"></p>

  <script>
    let timeLeft = 20;
    let quizTimer = setInterval(() => {
      document.getElementById("quizTimer").innerText = "‚è≥ Time: " + timeLeft;
      timeLeft--;
      if (timeLeft < 0) {
        clearInterval(quizTimer);
        submitQuiz();
      }
    }, 1000);

    function submitQuiz() {
      clearInterval(quizTimer);
      let score = 0;
      let form = document.getElementById("quizForm");
      if (form.q1.value === "library") score++;
      if (form.q2.value === "number") score++;
      document.getElementById("result").innerText = "‚úÖ Score: " + score + "/2";
    }
  </script>
</body>
2. AI Interview Section (Voice Q&A)
html
Copy
Edit
<body>
  <h2>AI Interview</h2>
  <button onclick="askQuestion()">üéôÔ∏è Ask Question</button>
  <button onclick="captureAnswer()">üó£Ô∏è Capture Answer</button>
  <p id="answer"></p>

  <script>
    function askQuestion() {
      let question = "Tell me about yourself";
      let msg = new SpeechSynthesisUtterance(question);
      speechSynthesis.speak(msg);
    }

    function captureAnswer() {
      let recognition = new window.webkitSpeechRecognition();
      recognition.onresult = function(event) {
        let transcript = event.results[0][0].transcript;
        document.getElementById("answer").innerText = "You said: " + transcript;
      };
      recognition.start();
    }
  </script>
</body>
